<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />

    <title>@ViewBag.Title - My web phim</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f1f3f4; /* Neutral background color for contrast */
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: #ffffff;
            padding: 20px;
            position: fixed;
            height: 100%;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.15);
            transition: background-color 0.3s ease;
        }

            .sidebar h2 {
                font-size: 1.5rem;
                color: #ffc107; /* Highlighted color */
                margin-bottom: 30px;
                text-align: center;
            }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 12px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: background-color 0.3s, color 0.3s;
                font-size: 1rem;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #ffc107;
                }

            .sidebar .nav-link {
                display: flex;
                align-items: center;
                gap: 8px;
            }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            background-color: #ffffff;
            box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.05);
        }

        header {
            padding: 15px 0;
            border-bottom: 2px solid #212529;
            color: #212529;
            font-size: 1.75rem;
        }

        footer {
            text-align: center;
            padding: 15px 0;
            border-top: 2px solid #212529;
            margin-top: 30px;
            color: #495057;
        }

        .body-content {
            padding: 20px 0;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>My Web Phim</h2>
        <ul class="navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Quản trị", "Index", "QUAN_TRI", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Khách hàng", "Index", "KHACH_HANG", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Phim", "Index", "PHIMs", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Comment", "Index", "COMMENTS", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Yêu thích", "Index", "FAVORITES", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    </div>

    <div class="content">
        <header>
            <h1>@ViewBag.Title</h1>
        </header>

        <div class="body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My Web Phim</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
